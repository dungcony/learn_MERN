    <div class="form">
        <form action="/update-user" method="POST">
            <fieldset>
                <legend>Update User</legend>
                <div class="d-none">
                    <label>userId: </label>
                    <input type="text" id="emailID" name="userId" value="<%= userEdit.id %>">
                </div>
                <div class="input-group">
                    <label>Email: </label>
                    <input type="text" id="emailID" name="email" value="<%= userEdit.email %>">
                </div>
                <div class="input-group">
                    <label>Name: </label>
                    <input type="text" id="nameID" name="myname" value="<%= userEdit.name %>">
                </div>
                <div class="input-group">
                    <label>City: </label>
                    <input type="text" id="CityID" name="myCity" value="<%= userEdit.city %>">
                </div>
                <div class="add"><button>update</button></div>
            </fieldset>
        </form>
    </div>
</body>

